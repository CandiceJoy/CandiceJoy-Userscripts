{
  "extends"  : [
	"../.eslintrc.json",
	"plugin:@typescript-eslint/eslint-recommended",
	"plugin:@typescript-eslint/recommended"
  ],
  "overrides": [
	{
	  "files"        : [
		"src/*.ts"
	  ],
	  "parser"       : "@typescript-eslint/parser",
	  "parserOptions": {
		"ecmaFeatures": {
		  "jsx": false
		}
	  },
	  "plugins"      : [
		"@typescript-eslint"
	  ],
	  "rules"        : {
		"@typescript-eslint/no-explicit-any": "error",
		"@typescript-eslint/no-inferrable-types": "off"
	  }
	}
  ]
}